/* components/tesla-swiper/index.wxss */
.swiper {
  width: 100%;
  height: 90vh;
  position: relative;
}

swiper {
  height: 100%;
}

.swiper image{
  width: 100%;
  height: 100%;
}

.swiper-item {
  height: 100%;
  position: relative;
}

.swiper-content {
  pointer-events: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiper-content .title {
  margin-top: 250rpx;
  font-size: 80rpx;
}

.swiper-content .meta {
  width: 100%;
  margin-top: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.meta .items {
  color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.meta .items .item-title {
  font-size: 40rpx;
  margin-bottom: 12rpx;
  animation: fadeIn 1s;
}

.swiper-content .action {
  pointer-events: all;
  margin-top: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiper-item image {
  display: block;
  width: 100%;
  height: 100%;
}

.book-btn {
  border-radius: 80rpx;
  overflow: hidden;
  position: relative;
  width: 80vw;
  z-index: 1;
}
.book-btn button {
  color: #ffffff;
  background: none;
  z-index: 1;
  width: 100%;
  height: 100%;
  font-size: 24rpx;
}

.book-btn .book-btn-back {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #000000;
  z-index: 0;
  opacity: 0.4;
}

.action .view-configuration {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ffffff;
  text-decoration: underline;
}


.swiper-content .swiper-dots {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.swiper-dots .dot {
  width: 40rpx;
  height: 4rpx;
  border: none;
  background-color: #bcbcb7;
  margin-top: 56rpx;
}

.swiper-dots .dot.active {
  background-color: #fff;
}